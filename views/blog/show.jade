article.blog
	header
		form#search-form(name='post', method='get', action='/search')
			input#search-field(name='q', placeholder='Search', type='text', size='20')
			
	div.content
		section.post
			h2= post.title
			p.meta
				!= moment(post.date).format('LL')
				a.author(href='/sobre')
					img(src='/img/about/gui.png', width='68', height='68')
			p!= md.parse(post.body)