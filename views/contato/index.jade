		div.contact
			form

	div#contact-form-area
		form.contact-form(name='contact', method='post', action='/contactmessage')
			fieldset
				label Nome
				span
					input(name='contact[name]', class='text-input')
			fieldset
				label Email	
				span
					input(name='contact[email]', class='text-input')



			fieldset
				label Mensagem	
				span
					textarea#text(name='post[body]', placeholder='', type='text', cols='40', rows='6')

			fieldset
				input(type="submit", class='button-normal', name='send', value='Enviar')
