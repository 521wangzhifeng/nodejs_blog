	header
		!=partial('search_field')

	div#about-profile-area
		div.profile
			div#image
				img.profile-image(src='/img/about/gui.png')
			div.profile-description
				p Blabla bla bal bala
				ul.social
					li 
						a(href='#')
							img(src='/img/icons/facebook.png')
					li 
						a(href='#')
							img(src='/img/icons/twitter.png')
					li 
						a(href='#')
							img(src='/img/icons/linkedin.png')
					li 
						a(href='#')
							img(src='/img/icons/github.png')
					li 
